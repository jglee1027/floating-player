{
    "manifest_version": 2,
    "name": "Floating Player+",
    "version": "3.6",

    "content_security_policy": "script-src 'self' https://www.youtube.com https://s.ytimg.com; object-src 'self'",

    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },

    "browser_action": {
        "default_icon": "img/16.png"
    },

    "background": {
        "page": "background.html"
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "permissions": [
        "contextMenus",
        "activeTab",
        "*://www.youtube.com/*",
        "webRequest",
        "webRequestBlocking"
    ],

    "optional_permissions": [
        "*://www.youtube-nocookie.com/*",
        "management"
    ]
}
